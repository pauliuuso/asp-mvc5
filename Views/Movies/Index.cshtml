@model List<aspnet.Models.Movie>
@{
    ViewBag.Title = "singleMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies:</h2>
@if(Model.Count == 0)
{
    <p><strong>We don't have any movies yet</strong></p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr class="success">
                <th>Name</th>
                <th>Genre</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td><a href="movies/details/@movie.Id">@movie.Name</a></td>
                    <td>@movie.Genre.Name</td>
                    <td><a href="movies/edit/@movie.Id">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
}
<input type="button" value="Add" class="btn btn-success" onclick="@("window.location.href='" + @Url.Action("AddMovie", "Movies") + "'");" />

