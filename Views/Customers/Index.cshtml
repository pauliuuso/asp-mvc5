@model List<aspnet.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers:</h2>
@if(Model.Count == 0)
{
    <p><strong>We have no customers yet^_^</strong></p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr class="success">
                <th>Id</th>
                <th>Name</th>
                <th>Membership Type</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.id</td>
                    <td><a href="customers/details/@customer.id">@customer.name</a></td>
                    <td>@customer.MembershipType.Name</td>
                    <td><a href="customers/edit/@customer.id">edit</a></td>
                </tr>
            }
        </tbody>
    </table>
}
<input type="button" value="Add" class="btn btn-success" onclick="@("window.location.href='" + @Url.Action("AddCustomer", "Customers") + "'");" />

